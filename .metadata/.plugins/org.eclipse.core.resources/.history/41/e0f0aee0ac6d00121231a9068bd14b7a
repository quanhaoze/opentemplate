#define __BIT_20130203_QUANHAOZE_H


/*
 * 获取缓冲区bit中处于pos位置的位的状态，左边是0
 * 返回状态是0或者1
 */
int bit_get(const unsigned char *bits,int pos);

int bit_set(unsigned char *bits,int pos,int state);

